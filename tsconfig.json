{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "incremental": true, // # disable --noEmit
    "paths": {
      "@wetrial/core": ["./packages/core/src/index.tsx"],
      "@wetrial/component": ["./packages/component/src/index.tsx"],
      "@wetrial/hooks": ["./packages/hooks/src/index.tsx"],
      "@wetrial/form-designer": ["./packages/form-designer/src/index.tsx"],
      "@wetrial/editor": ["./packages/editor/src/index.tsx"]
    }
  },
  "include": [
    "**/src",
    "**/docs",
    "scripts",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures"
  ]
}
